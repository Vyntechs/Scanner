{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },

  "package": {
    "productName": "Vyntool",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "identifier": "com.vyntool.app"
    },
    "windows": [
      {
        "title": "Vyntool",
        "width": 1200,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
